@echo off
REM Windows batch launcher for pre-commit hook invoking PowerShell script.
SETLOCAL ENABLEEXTENSIONS
set SCRIPT_DIR=%~dp0
set PS_SCRIPT=%SCRIPT_DIR%pre-commit.ps1
if not exist "%PS_SCRIPT%" (
  echo [pre-commit] Missing pre-commit.ps1
  exit /b 1
)
pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass -File "%PS_SCRIPT%"
exit /b %errorlevel%
