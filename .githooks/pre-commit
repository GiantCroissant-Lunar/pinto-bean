#!/usr/bin/env pwsh
# Lightweight shim to call actual PowerShell hook logic in pre-commit.ps1
try {
  $script = Join-Path $PSScriptRoot 'pre-commit.ps1'
  if (-not (Test-Path $script)) { Write-Error "Missing pre-commit.ps1"; exit 1 }
  pwsh -NoLogo -NoProfile -File $script
  exit $LASTEXITCODE
} catch {
  Write-Error $_.Exception.Message
  exit 1
}
