{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "timezone": "Asia/Taipei",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "ignoreTests": true,
  "dependencyDashboard": true,
  "dependencyDashboardLabels": ["dependencies", "renovate"],
  "dependencyDashboardTitle": "Renovate Dependency Dashboard",
  "dependencyDashboardHeader": "This issue tracks all Renovate updates for pinto-bean. See renovate.json for grouping and automerge policies.",
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardOSVVulnerabilitySummary": "unresolved",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "actions (minor & patch)",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "python dev deps",
      "matchPackageNames": ["ruff", "mypy", "pytest"],
      "automerge": false,
      "labels": ["deps", "python"]
    },
    {
      "matchManagers": ["terraform"],
      "groupName": "terraform providers",
      "matchDepTypes": ["requirement"],
      "automerge": false,
      "labels": ["deps", "terraform"]
    },
    {
      "matchManagers": ["nuget"],
      "groupName": "nuget non-major",
      "automerge": false,
      "labels": ["deps", "dotnet"]
    },
    {
      "description": "Default non-major automerge for safe ecosystems",
      "matchUpdateTypes": ["minor", "patch"],
      "excludePackagePatterns": ["^ruff$", "^mypy$", "^pytest$"],
      "excludeManagers": ["terraform", "nuget"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "enabledManagers": ["github-actions", "pip_requirements", "terraform", "nuget"],
  "commitMessagePrefix": "chore(deps): "
}
